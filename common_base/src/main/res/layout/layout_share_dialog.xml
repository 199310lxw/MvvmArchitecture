<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/shape_top_white_bg_14"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dimen_size_dp_24"
        android:paddingTop="@dimen/dimen_size_dp_15"
        android:paddingBottom="@dimen/dimen_size_dp_5"
        android:text="@string/share_title"
        android:textColor="#666666"
        android:textSize="@dimen/dimen_size_sp_16" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_share_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutAnimation="@anim/layout_from_bottom"
        tools:itemCount="5"
        tools:layoutAnimation="@null"
        tools:layoutManager="GridLayoutManager"
        tools:listitem="@layout/share_item"
        tools:spanCount="5" />

</LinearLayout>