<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <com.xwl.common_lib.views.CustomJzvdStd
        android:id="@+id/jz_video"
        android:layout_width="match_parent"
        android:layout_height="220dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/dimen_size_sp_16"
            android:padding="@dimen/dimen_size_dp_6"
            android:singleLine="true"
            android:textColor="@color/black_222"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tvDefinition"
            android:ellipsize="end"
            android:layout_marginEnd="@dimen/dimen_size_dp_10"
            tools:text="宿命之地"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tvDefinition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/imgDownload"
            app:layout_constraintTop_toTopOf="parent"
            android:text="清晰度"
            android:textSize="@dimen/dimen_size_sp_14"
            android:padding="@dimen/dimen_size_dp_10"
            android:layout_marginEnd="@dimen/dimen_size_dp_10"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgDownload"
            android:layout_width="@dimen/dimen_size_dp_20"
            android:layout_height="@dimen/dimen_size_dp_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="@dimen/dimen_size_dp_10"
            android:src="@drawable/icon_download"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ProgressBar
        android:id="@+id/progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="6dp"
        android:layout_gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="@+id/yes"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_progress"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/dimen_size_dp_20" />

    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/progress_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:layout_marginRight="@dimen/dimen_size_dp_10"
        android:text="0%"
        android:layout_marginLeft="@dimen/dimen_size_dp_10"
        android:textSize="@dimen/dimen_size_sp_14" />


</LinearLayout>