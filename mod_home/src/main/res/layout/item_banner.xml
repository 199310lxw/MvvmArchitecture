<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_size_dp_10"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dimen_size_dp_20"
            android:layout_height="match_parent" />

        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            app:banner_indicator_selected_width="@dimen/dimen_size_dp_8"
            app:banner_indicator_normal_width="@dimen/dimen_size_dp_8"
            app:banner_indicator_selected_color="@color/white"
            android:background="@drawable/shape_bg_white_corner_12" />

        <View
            android:layout_width="@dimen/dimen_size_dp_20"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>